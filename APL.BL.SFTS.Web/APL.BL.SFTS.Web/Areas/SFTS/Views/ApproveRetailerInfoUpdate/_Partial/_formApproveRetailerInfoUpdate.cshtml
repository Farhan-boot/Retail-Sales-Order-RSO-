
<form novalidate name="frmApproveRetailerInfoUpdate" id="frmApproveRetailerInfoUpdate" class="form-horizontal row-border">
    <input type="hidden" id="hRetailerModifyId" readonly="readonly" ng-model="hRetailerModifyId" />

    <div class="row">
        <div class="col-md-12">
            <div style="height: 10px;"></div>

              <div class="col-md-6">
                  <table class="table table-bordered">
                      <tr>
                          <td>Retailer Code</td>
                          <td>{{RetailerCode}}</td>
                      </tr>
                      <tr>
                          <td>Distributor</td>
                          <td>{{Distributor}}</td>
                      </tr>
                      <tr>
                          <td>Requester Comments</td>
                          <td>{{RequesterComments}}</td>
                      </tr>
                      <tr>
                          <td>Approver Comments</td>
                          <td>
                              <textarea rows="2" cols="3"
                                        id="txtComments"
                                        @*ng-disabled="IsCommentDisabled"*@
                                        class="form-control"
                                        name="txtComments" ng-model="ApproverComments"></textarea>
                          </td>
                      </tr>
                  </table>
              </div>


            <table class="table table-bordered">
                <thead style="background: lightblue">
                    <tr>
                        <th class="col-md-2">Label</th>
                        <th class="col-md-5">Old Value</th>
                        <th>New Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="col-md-2">Retailer Name</td>
                        <td>{{RetailerName}}</td>
                        <td>{{ModifiedRetailerName}}</td>
                    </tr>
                    <tr>
                        <td class="col-md-2">Address</td>
                        <td>{{Address}}</td>
                        <td>{{ModifiedAddress}}</td>
                    </tr>
                    <tr>
                        <td class="col-md-2">Own Shop</td>
                        <td>{{OwnShop}}</td>
                        <td>{{ModifiedOwnShop}}</td>
                    </tr>
                    <tr>
                        <td class="col-md-2">Owner Name</td>
                        <td>{{OwnerName}}</td>
                        <td>{{ModifiedOwnerName}}</td>
                    </tr>
                    <tr>
                        <td class="col-md-2">Shop Size</td>
                        <td>{{ShopSize}}</td>
                        <td>{{ModifiedShopSize}}</td>
                    </tr>
                    <tr>
                        <td class="col-md-2">Contact Person</td>
                        <td>{{ContactPerson}}</td>
                        <td>{{ModifiedContactPerson}}</td>
                    </tr>
                    <tr>
                        <td class="col-md-2">Contact No</td>
                        <td>{{ContactNo}}</td>
                        <td>{{ModifiedContactNo}}</td>
                    </tr>
                    <tr>
                        <td class="col-md-2">District</td>
                        <td>{{District}}</td>
                        <td>{{ModifiedDistrict}}</td>
                    </tr>
                    <tr>
                        <td class="col-md-2">Thana</td>
                        <td>{{Thana}}</td>
                        <td>{{ModifiedThana}}</td>
                    </tr>



                </tbody>
            </table>

            <div class="col-md-6">
                <table>

                   
                </table>
            </div>
          

        
            <div style="height: 10px;"></div>

            <div class="form-group m-b-10 clearfix">
                <label class="control-label" style="color: red;" ng-show="IsMapNotAvail">{{msgMapNotAvail}}</label>
            </div>
            
            <div style="height: 10px;"></div> 

        </div>
   
    </div>



</form>




