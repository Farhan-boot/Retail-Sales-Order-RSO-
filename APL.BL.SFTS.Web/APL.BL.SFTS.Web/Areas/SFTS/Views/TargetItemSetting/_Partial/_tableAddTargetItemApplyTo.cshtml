
<div id="customScrolledTableInspac" style="overflow: auto; max-width: 1230px;">
    <style>
        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            margin: 0;
        }
    </style>

    <div style="height: 10px;"></div>
    <div class="rowdiv" style="max-height: 350px; margin-bottom: -10px; overflow: auto;">
        <table class="table table-striped table-hover" style="width: 100%;">
            <tr ng-repeat="dataModel in ListItemtDetails|filter:ListItemtDetailSearch" ng-class="{'rowselected':$index == selectedRow}" ng-click="setClickedRow($index)">
                <td class="inputClass" style="display: none;">{{dataModel.TargetApplyId}}</td>
                <td class="inputClass" style="display: none;">{{dataModel.ChannelType}}</td>
                <td class="inputClass" style="display: none;">{{dataModel.Entity}}</td>
                <td class="inputClass" style="display: none;">{{dataModel.StaffRole}}</td>
                <td class="inputClass" style="display: none;">{{dataModel.CenterType}}</td>

                <td class="inputClass" align="left">
                    <div style="width:220px">
                        <select id="ddlChannelType"
                                ng-model="dataModel.ChannelType"
                                name="ddlChannelType"
                                style="width: 100%"
                                ng-options="S.CHANNEL_TYPE_ID as S.CHANNEL_TYPE_NAME for S in listChennelType">
                            <option value="">-- Select Channel Type --</option>
                        </select>
                    </div>
                </td>

                <td class="inputClass" align="left">
                    <div style="width:220px" align="left">
                        <select id="ddlEntity"
                                ng-model="dataModel.Entity"
                                name="ddlEntity"                             
                                ng-change="TdShowHide(dataModel)"
                                style="width: 100%"
                                ng-options="S.ENTITY_TYPE_ID as S.ENTITY_TYPE_NAME for S in listEntityType">>
                            <option value="">-- Select Entity Type--</option>                         
                        </select>
                    </div>
                </td>

                <td class="inputClass" ng-disabled="IsTdStaffDisabled">
                    <div style="width:220px">
                        <select id="ddlStaffType"
                                ng-model="dataModel.StaffRole"
                                ng-disabled ="dataModel.IsStaffDisabled"
                                name="ddlStaffType"
                                style="width: 100%"
                                ng-options="S.ROLE_ID as S.ROLE_NAME for S in listRole">
                            <option value="">-- Select Staff Type --</option>
                        </select>
                    </div>
                </td>

                <td class="inputClass">
                    <div style="width:220px">
                        <select id="ddlCenterType"
                                ng-model="dataModel.CenterType"
                                ng-disabled ="dataModel.IsCenterDisabled"
                                name="ddlCenterType"
                                style="width: 100%"
                                ng-options="S.CENTER_TYPE_ID as S.CENTER_TYPE_NAME for S in listCenterType">
                            <option value="">-- Select Center Type --</option>
                        </select>
                    </div>
                </td>

                <td class="inputOptionClass" style="text-align:center; min-width:50px; color:white">
                    <span class="label label-danger label-mini">
                        <a href="javascript:void(0);" data-toggle="modal" class="bs-tooltip" title="Delete">
                            <i class="icon-trash" ng-click="DeleteRow($index)"></i>
                        </a>
                    </span>
                </td>
            </tr>
        </table>
    </div>
</div>


