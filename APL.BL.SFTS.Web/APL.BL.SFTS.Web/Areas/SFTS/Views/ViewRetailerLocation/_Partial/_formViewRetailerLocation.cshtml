
<form novalidate name="frmRetailerLocation" id="frmRetailerLocation" class="form-horizontal row-border">

    <div class="row">
        <div class="col-md-4">
            <div style="height: 10px;"></div>

            <div class="form-group">
                <label class="col-md-4 control-label" for="input17">Zone</label>
                <div class="col-md-8">
                    <select id="ddlZone" class="select2-select-00"
                            ng-model="Zone"
                            name="ddlZone"
                            ng-change="loadRoute(0);"
                            data-placeholder="--Select Zone--"
                            style="width: 100%" ng-options="rl.ZONE_ID as rl.ZONE_CODE_NAME for rl in listZone">
                        <option></option>
                    </select>
                </div>
            </div>

            <div style="height: 10px;"></div> 

            <div class="form-group m-b-10 clearfix">
                <label class="control-label" style="color: red;" ng-show="IsMapNotAvail">{{msgMapNotAvail}}</label>
            </div>

        </div>

        <div class="col-md-4">
            <div style="height: 10px;"></div>

            <div class="form-group">
                <label class="col-md-4 control-label" for="input17">Route</label>
                <div class="col-md-8">
                    <select id="ddlRoute" class="select2-select-00"
                            ng-model="Route"
                            name="ddlRoute"
                             ng-change="loadRetailer(0);"
                            data-placeholder="--Select Route--"
                            style="width: 100%" ng-options="ct.ID as ct.CODE_NAME for ct in listRoute">
                        <option></option>
                    </select>
                </div>
            </div>

            <div style="height: 10px;"></div>
        </div>

        <div class="col-md-4">
            <div style="height: 10px;"></div>

            <div class="form-group">
                <label class="col-md-4 control-label" for="input17">Retailer</label>
                <div class="col-md-8">
                    <select id="ddlRetailer" class="select2-select-00"
                            ng-model="Retailer"
                            name="ddlRetailer"
                            data-placeholder="--Select Retailer--"
                            style="width: 100%" ng-options="ct.RETAILER_ID as ct.RETAILER_NAME_CODE for ct in listRetailer">
                        <option></option>
                    </select>
                </div>
            </div>

            <div style="height: 10px;"></div>
            <div style="padding-left: 230px;">
                <span id="Show" class="btn btn-info margin-right-btn" ng-click="GetRetailerGPSDetail()">
                    <i class="icon-search"></i> Show Map
                </span>
            </div>

            <div style="height: 10px;"></div>
        </div>

    </div>
</form>




