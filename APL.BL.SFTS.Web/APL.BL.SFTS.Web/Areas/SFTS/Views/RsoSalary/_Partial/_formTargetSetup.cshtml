
<form novalidate name="frmDistributorTarget" id="frmDistributorTarget" class="form-horizontal row-border">
    <input id="hUploadCode" hidden="hidden" ng-model="hUploadCode" />
    <input id="hTargetId" hidden="hidden" ng-model="hTargetId" />
    <input id="hVersion" hidden="hidden" ng-model="hVersion" />
    <input type="hidden" id="hUserID" name="userID" value="@Session["CurUserID"].ToString()" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group  m-b-10 clearfix">
                <label class="col-md-4 control-label" for="input17">Target Item</label>
                <div class="col-md-6">
                    <select id="ddlTargetItem" class="select2-select-00"
                            ng-model="TargetItem"
                            ng-disabled="IsTargetItemDisabled"
                            name="ddlTargetItem"
                            data-placeholder="--Select Target Item--"
                            style="width: 100%" ng-options="dist.TARGET_ITEM_ID as dist.TARGET_ITEM_NAME for dist in listTargetItem" >
                        <option></option>
                    </select>
                </div>
                <span class="error">*</span>
            </div>

            <div class="form-group m-b-10 clearfix">
                <label class="col-md-4 control-label" for="input17">Target Period</label>
                <div class="col-md-6">
                    <select id="ddlTargetPeriod" class="select2-select-00"
                            ng-model="TargetPeriod"
                            name="ddlTargetPeriod"
                            ng-disabled="IsTargetPeriodDisabled"
                            data-placeholder="--Select Target Period--"
                            style="width: 100%" ng-options="rout.TARGET_PERIOD_ID as rout.TARGET_PERIOD_NAME for rout in listTargetPeriod" >
                        <option></option>
                    </select>
                </div>
                <span class="error">*</span>
            </div>

