            <!--UsingJS-->
            <div class="form-group  m-b-10 clearfix">
                <label class="col-md-4 control-label">Source File</label>
                <div class="col-md-6">
                    <input type="file" id="files" name="files[]" multiple required />
                </div>
                <span class="error">*</span>
            </div>

            <div class="form-group  m-b-10 clearfix">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <div class="w3-light-grey" ng-show="IsInProgress">
                        <div class="w3-green" style="height: 15px; width: {{ProgressStatus}}%">{{ProgressStatus}} %  {{waitText}}</div>
                    </div>
                </div>
            </div>

            <div style="height: 10px;"></div>
            <p style="color:red; font-weight: bold;" ng-show="IsNotFoundShow">{{NotFoundMsg}}</p>
        </div>

        <div class="col-md-6">
            <div class="form-group m-b-10 clearfix">
                <label class="col-md-4 control-label">Set Date</label>
                <div class="col-md-6">
                    <input type="text"
                           id="txtSetDate"
                           style="color: red;"
                           ng-model="SetDate"
                           readonly
                           class="form-control"
                           name="txtSetDate" />
                </div>
                <span class="error">*</span>
            </div>

            <div class="form-group m-b-10 clearfix">
                <label class="col-md-4 control-label">Revision Up To</label>
                <div class="col-md-6">
                    <input type="text"
                           id="txtRevisionUpTo"
                           ng-model="RevisionUpTo"
                           class="form-control datepicker"
                           name="txtRevisionUpTo" placeholder="dd-MM-yyyy"  />
                </div>
                <span class="error">*</span>
            </div>

            <div class="form-group m-b-10 clearfix">
                <label class="col-md-4 control-label" for="input17">Target For</label>
                <div class="col-md-6">
                    <select id="ddlTargetFor" class="select2-select-00"
                            ng-model="TargetFor"
                            ng-change="TargetForChange()"
                            ng-disabled="IsTargetForDisabled"
                            name="ddlTargetFor"
                            data-placeholder="--Select Target For--"
                            style="width: 100%" required>
                        <option></option>
                        <option value="1">Distributor</option>
                        <option value="2">Staff</option>
                    </select>
                </div>
                <span class="error">*</span>
            </div>

            <div class="form-group  m-b-10 clearfix" ng-show="IsStaffTypeShow">
                <label class="col-md-4 control-label" for="input17">Staff Type</label>
                <div class="col-md-6">
                    <select id="ddlStaffType" class="select2-select-00"
                            ng-model="StaffType"
                            ng-disabled="IsStaffTypeDisabled"
                            name="ddlStaffType"
                            data-placeholder="--Select Staff Type--"
                            style="width: 100%" ng-options="S.ROLE_ID as S.ROLE_NAME for S in listRole">
                        <option></option>
                    </select>
                </div>
                <span class="error">*</span>
            </div>

        </div>
    </div>

</form>

