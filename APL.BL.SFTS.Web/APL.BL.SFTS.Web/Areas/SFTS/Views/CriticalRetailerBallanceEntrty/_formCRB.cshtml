


<form novalidate name="frmCriticalBalances" id="frmCriticalBalances" class="form-horizontal row-border">
    <input type="hidden" id="hCriticalBalanceId" readonly="readonly" ng-model="hCriticalBalanceId" />
    <div class="row" ng-show="IsUpdate>0">
        <div class="col-md-6">
            <div style="height: 10px;"></div>


            <div class="form-group  m-b-10 clearfix">
                <label class="col-md-4 control-label" for="input17">Retailer :</label>
                <div class="col-md-6">
                    <label class="control-label" for="input17">{{RetailerCode}}</label>
                </div>
                <span class="error">*</span>
            </div>
            <div class="form-group  m-b-10 clearfix">
                <label class="col-md-4 control-label" for="input17">Product :</label>
                <div class="col-md-6">
                    <label class="control-label" for="input17">{{ProductName}}</label>
                </div>
                <span class="error">*</span>
            </div>
            <div class="form-group  m-b-10 clearfix">
                <label class="col-md-4 control-label" for="input17">Amount :</label>
                <div class="col-md-6">
                    <input type="text"
                           id="txtSaturday"
                           class="form-control"
                           ng-model="Saturday"
                           name="txtSaturday" required />
                </div>
                <span class="error">*</span>
            </div>
            <div class="form-group  m-b-10 clearfix" hidden>
                <label class="col-md-4 control-label" for="input17">Monday :</label>
                <div class="col-md-6">
                    <input type="text"
                           id="txtMonday"
                           class="form-control"
                           ng-model="Monday"
                           name="txtMonday" />
                </div>
                <span class="error">*</span>
            </div>
            <div class="form-group  m-b-10 clearfix" hidden>
                <label class="col-md-4 control-label" for="input17">Wednesday :</label>
                <div class="col-md-6">
                    <input type="text"
                           id="txtWednesday"
                           class="form-control"
                           ng-model="Wednesday"
                           name="txtWednesday" />
                </div>
                <span class="error">*</span>
            </div>
            <div class="form-group  m-b-10 clearfix" hidden>
                <label class="col-md-4 control-label" for="input17">Friday :</label>
                <div class="col-md-6">
                    <input type="text"
                           id="txtFriday"
                           class="form-control"
                           ng-model="Friday"
                           name="txtFriday" />
                </div>
                <span class="error">*</span>
            </div>

            @*<div class="form-group  m-b-10 clearfix">
                <label class="col-md-4 control-label" for="input17">Is Active :</label>
                <div class="col-md-6">
                    <input type="radio"
                           ng-model="IsActive"
                           name="isactive" value="1" required />  Yes
                    <input type="radio"
                           ng-model="IsActive"
                           name="isactive" value="0" required /> No
                </div>
                <span class="error">*</span>
            </div>*@

        </div>
        <div class="col-md-6">
            <div style="height: 10px;"></div>

            <div class="form-group  m-b-10 clearfix">
                <label class="col-md-4 control-label" for="input17">Distributor :</label>
                <div class="col-md-6">
                    <label class="control-label" for="input17">{{DistributorCode}}</label>
                </div>
                <span class="error">*</span>
            </div>
            <div class="form-group  m-b-10 clearfix" hidden>
                <label class="col-md-4 control-label" for="input17">Sunday :</label>
                <div class="col-md-6">
                    <input type="text"
                           id="txtSunday"
                           class="form-control"
                           ng-model="Sunday"
                           name="txtSunday" />
                </div>
                <span class="error">*</span>
            </div>
            <div class="form-group  m-b-10 clearfix" hidden>
                <label class="col-md-4 control-label" for="input17">Tuesday :</label>
                <div class="col-md-6">
                    <input type="text"
                           id="txtTuesday"
                           class="form-control"
                           ng-model="Tuesday"
                           name="txtTuesday" />
                </div>
                <span class="error">*</span>
            </div>
            <div class="form-group  m-b-10 clearfix" hidden>
                <label class="col-md-4 control-label" for="input17">Thursday :</label>
                <div class="col-md-6">
                    <input type="text"
                           id="txtThursday"
                           class="form-control"
                           ng-model="Thursday"
                           name="txtThursday" />
                </div>
                <span class="error">*</span>
            </div>
            <div class="form-group  m-b-10 clearfix">
                <label class="col-md-4 control-label" for="input17">From Date :</label>
                <div class="col-md-6">
                    <input type="text"
                           id="txtFromDate"
                           class="form-control datepicker"
                           ng-model="FromDate"
                           value="{{FromDate}}"
                           name="txtFromDate" required />
                </div>
                <span class="error">*</span>
            </div>
            <div class="form-group  m-b-10 clearfix">
                <label class="col-md-4 control-label" for="input17">
                    To Date :
                </label>
                <div class="col-md-6">
                    <input type="text"
                           id="txtToDate"
                           class="form-control datepicker"
                           ng-model="ToDate"
                           value="{{ToDate}}"
                           name="txtToDate" required />
                </div>
                <span class="error">*</span>
            </div>


        </div>
    </div>

    <div class="row" ng-show="IsUpdate=='' || IsUpdate==0">
        <div class="col-md-6">
            <div style="height: 10px;"></div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="input17">Product :</label>
                <div class="col-md-6">
                    <select id="ddlProduct" class="select2-select-00"
                            ng-model="ProductName"
                            name="ddlProduct"
                            ng-change="deleteCriticalBalanceTemp()"
                            data-placeholder="--Select Product--"
                            style="width: 100%" required>
                        <option value=""></option>
                        <option value="ZERO_SIM">SIM</option>
                        <option value="ZERO_SC">Scrach Card</option>
                        <option value="ZERO_TOPUP">Topup</option>
                    </select>
                </div>
                <span class="error">*</span>
            </div>

            <div class="form-group  m-b-10 clearfix">
                <label class="col-md-4 control-label" for="input17">Upload Critical Balance :</label>
                <div class="col-md-6">
                    <input type="file" name="uploadedExcelFile" id="uploadedExcelFile" multiple>
                    @*<label type="button" ng-click="loadCriticalTempBalances(0);"  class="btn btn-info btn-sm"  >Upload</label>*@
                </div>
                <span class="error"></span>
            </div>
            <input type="hidden" id="hdExcelFileName" />
        </div>

    </div>

</form>


<form novalidate name="tableCriticalTempBalances" id="tableCriticalTempBalances" class="form-horizontal row-border" ng-show="IsUpdate=='' || IsUpdate==0">
    <div class="row">

        <div ui-grid="gridOptionsCriticalTempBalances"
             ui-grid-resize-columns
             ui-grid-auto-resize
             ui-grid-move-columns
             ui-grid-exporter
             ui-grid-pinning class="grid"></div>

        <div class="loadmore">
            <div ng-show="loaderMoreCriticalTempBalances" ng-class="result">
                <img src="~/Content/img/ng-loader.gif" />
                {{lblMessageForCriticalTempBalances}}
            </div>
        </div>



    </div>
</form>

