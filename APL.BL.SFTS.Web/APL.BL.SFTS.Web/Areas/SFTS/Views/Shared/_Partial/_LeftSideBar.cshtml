
<input type="hidden" id="hUserID" name="userID" value="@Session["CurUserID"].ToString()" />
<input type="hidden" id="hUserName" name="userName" value="@Session["CurUserName"].ToString()" />
<input type="hidden" id="hUserFullName" name="userFullName" value="@Session["CurUserFullName"].ToString()" />
<input type="hidden" id="hUserToken" name="TokenID" value="@Session["UserToken"].ToString()" />
<input type="hidden" id="hMainMenuId" name="MainMenuId" ng-model="hMainMenuId" />
<!-- Left side column. contains the sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">

            <li class="treeview" ng-repeat="menu in menuList">
                @*menu-open*@
                <a href="#" id="{{menu.mainMenu.ID}}">
                    <i class="{{menu.mainMenu.MENU_ICON}}"></i>
                    <span>{{menu.mainMenu.MENU_NAME}}</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    @*style="overflow: hidden; display: block;"*@
                    <li ng-repeat="subMenu in menu.subMenuList"><a href="{{subMenu.MENU_URL}}"><i class="{{subMenu.MENU_ICON}}"></i> {{subMenu.MENU_NAME}}</a></li>                   
                </ul>
            </li>


        </ul>
    </section>
    <!-- /.sidebar -->
</aside>