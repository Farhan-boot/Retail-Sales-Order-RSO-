
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row" ng-controller="loginCtrl">
        <div class="col-sm-6 col-md-4 col-md-offset-4 loginpanel">
            <h1 class="text-center login-title">Sales Force Tracking System</h1>
            <div class="account-wall">
                <img class="img-rounded img-responsive profile-img" src="~/Content/img/logo2.PNG" alt="logo" />
                <hr />
                <div class="form-signin">
                    <div class="loggedloader" ng-show="IsLogged">
                        <img ng-show="success" src="../Content/img/icon_success.png" />
                        <img ng-show="error" src="../Content/img/icon_error.png" />
                        {{lblrmessage}}
                    </div>     
                    <input ID="txtUserName" type="text" name="username"
                           ng-model="UserLogin"
                           class="form-control"
                           placeholder="Username"
                           autofocus="autofocus"
                           data-rule-required="true"
                           data-msg-required="Please enter your username."/>

                    <input ID="txtPassword" type="password" name="password"
                           ng-model="Password"
                           class="form-control"
                           placeholder="Password"
                           data-rule-required="true"
                           data-msg-required="Please enter your password."/>

                    <button ID="btnOpenDoor" type="submit" class="btn btn-md btn-primary btn-block logBtn"
                            ng-click="submitLogin()"
                            ng-disabled="frmLogin.$invalid">
                            Log in
                    </button>

                </div>
            </div>
        </div>
    </div>
</div>

@section AngularScript{
    <script src="~/ScriptsNg/Controllers/AuthenticationCtrl.js"></script>
    <script src="~/ScriptsNg/Service/AuthenticationSrvc.js"></script>
}